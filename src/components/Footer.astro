---
import { getTranslations } from "../utils/i18n";
import CircleWave from "../assets/circle_wave.svg";
import { Image } from "astro:assets";

const t = getTranslations(Astro.currentLocale);
// https://flowbite.com/docs/images/logo.svg
---
<footer class="bg-indigo-50 rounded-lg shadow dark:bg-gray-900 m-4">
    <div class="w-full max-w-[920px] mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="#intro" class="flex items-center justify-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse pointer-events-none">
                <Image src={CircleWave} class="size-16" alt="Flowbite Logo" />
                <!-- change this for my logo -->
                <span class="self-center text-2xl font-semibold whitespace-nowrap text-black dark:text-white">{t.header_footer.portfolio}</span>
            </a>
            <ul class="flex flex-wrap items-center justify-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                <li>
                    <a href="#intro" class="opacity-80  text-black dark:text-white hover:opacity-100 me-4 md:me-6">{t.header_footer.about_me}</a>
                </li>
                <li>
                    <a href="#experience" class="opacity-80 text-black dark:text-white hover:opacity-100 me-4 md:me-6">{t.header_footer.experience}</a>
                </li>
                <li>
                    <a href="#projects" class="opacity-80 text-black dark:text-white hover:opacity-100">{t.header_footer.projects}</a>
                </li>
            </ul>
        </div>
    </div>
</footer>